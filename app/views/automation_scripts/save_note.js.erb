var el = $('.edit-automation-note');

<% if @automation_script.errors.any? %>
  // Create a list of errors
  var errors = $('<ul />');
  <% @automation_script.errors.full_messages.each do |error| %>
    errors.append('<li><%= escape_javascript( error ) %></li>');
  <% end %>
  // Display errors on form
  el.find('.alert-message.block-message.error').show().html(errors);
<% else %>
  location.reload();
<% end %>

