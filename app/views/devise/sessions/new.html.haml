- notice_message = "Notice: We're using domain account verification now. Please make sure to login with your domain email/password. Or your domain account may be locked."
- if flash[:alert]
  - notice_message = flash[:alert] + "<br/>" + notice_message

.alert-message.error!= notice_message

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %fieldset
    %legend Sign in
    .clearfix
      = f.label :email
      .input
        =f.text_field :email
    .clearfix
      = f.label :password
      .input
        = f.password_field :password
    .actions
      = f.submit "Sign in", :class => "btn primary"